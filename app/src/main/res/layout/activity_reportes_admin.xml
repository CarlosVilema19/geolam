<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportesAdminUsuarios">

    <include layout="@layout/activity_menu_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iMenuSupe"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:foregroundGravity="center"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txReportes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:text="@string/tituloReportes"

                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"
                        android:textStyle="bold"


                        />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGenerarPDFUsuarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Usuarios Registrados"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    android:background="@drawable/degradado2"
                    android:drawableLeft="@drawable/ic_baseline_groups_24"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGenerarPDFLugaresVisitados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Lugares mÃ¡s visitados"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    android:background="@drawable/degradado2"
                    android:drawableLeft="@drawable/hospital"
                    />


                <com.jjoe64.graphview.GraphView
                    android:id="@+id/grafica"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>