<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:backgroundTint="@null"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ReportesAdmin">

    <include layout="@layout/activity_menu_toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imagen"
        android:layout_below="@+id/iMenuSupe"
        android:paddingTop="@dimen/activity_vertical_margin"

       >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:alpha="0.6"
            android:backgroundTint="@null"
            android:layout_centerVertical="true"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card"

                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="45dp"

                android:layout_marginBottom="25dp"
                cardBackgroundColor="@android:color/transparent"
                android:backgroundTint="@null"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true">

                <ScrollView
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@null">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginBottom="14dp"
                        android:background="@color/transparent"
                        android:backgroundTint="@null"
                        android:orientation="vertical"

                        android:paddingLeft="14dp">


                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:backgroundTint="@null"
            android:layout_marginBottom="14dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:paddingLeft="14dp"
            android:layout_marginTop="110dp"

            android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerarPDFUsuarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="85dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/degradado4"
            android:drawableLeft="@drawable/ic_baseline_groups_24"
            android:text="Usuarios Registrados"
            android:textSize="11dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnprueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="40sp"
            android:background="@drawable/degradado4"
            android:drawableLeft="@drawable/hospital"
            android:text="Lugares mas vistos    "
            android:textSize="11dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"

           >

            <TextView
                android:id="@+id/txReportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/textview_redondo"
                android:gravity="center"

                android:text="@string/tituloReportes"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>