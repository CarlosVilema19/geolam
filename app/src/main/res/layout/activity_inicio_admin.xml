<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".InicioAdmin">

    <include layout="@layout/activity_menu_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/imagen_gestion"
        android:layout_below="@+id/iMenuSupe">

        <TextView

            android:id="@+id/txGestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"

            android:text=" "
            android:textAlignment="center"
            android:textColor="@color/morado"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/idCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txGestion"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <ViewFlipper

                    android:id="@+id/carrusel"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:clickable="true"

                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground">

                </ViewFlipper>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView

            android:id="@+id/txLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/idCont"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/menos"
            android:textColor="@color/morado"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:textSize="9dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@id/txLine"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevious"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circular2"
                android:clickable="true"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_left_24"
                android:focusable="true"
                app:backgroundTint="@null"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="280dp"
                android:background="@drawable/circular2"

                android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_right_24"

                app:backgroundTint="@null"

                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/idCont2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/txLine"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"

                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <ViewFlipper

                    android:id="@+id/carrusel3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:clickable="true"

                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground">

                </ViewFlipper>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView

            android:id="@+id/txLine2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/idCont2"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:drawableLeft="@drawable/menos"
            android:gravity="center_horizontal"
            android:textColor="@color/morado"
            android:textSize="9dp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txLine2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <ViewFlipper

                    android:id="@+id/carrusel2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:clickable="true"

                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground">

                </ViewFlipper>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txLine2"
            android:layout_alignParentBottom="true"

            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevious2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circular2"
                android:clickable="true"
                android:layout_marginBottom="20dp"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_left_24"
                android:focusable="true"
                app:backgroundTint="@null"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="280dp"
                android:background="@drawable/circular2"

                android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_right_24"

                app:backgroundTint="@null"

                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>