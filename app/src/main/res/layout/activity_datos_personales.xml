<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".registrar">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvMisDatos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Mis Datos"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_gravity="center_horizontal"

                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivPerfil3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="4dp"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/perfil2"

                        android:tag="bg1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"

                        app:strokeColor="@android:color/darker_gray"
                        app:strokeWidth="2dp"

                        />

                    <com.google.android.material.button.MaterialButton

                        android:id="@+id/btn_cargarf3"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="220dp"
                        android:layout_marginTop="100dp"
                        android:backgroundTint="@android:color/holo_green_light"
                        app:icon="@drawable/ic_baseline_photo_camera_24"
                        app:iconGravity="textEnd"
                        app:iconTint="#FFFFFF"
                        app:strokeColor="@color/white"
                        app:strokeWidth="3dp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tvEmailUsu1"

                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_margin="10dp"

                    android:layout_weight="1"

                    android:text="Email"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:layout_marginBottom="2dp"
                    android:text="  Nombre"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    >

                </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginRight="10dp"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"

                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="none"

                    android:textIsSelectable="false"
                    android:layout_marginLeft="10dp"

                    android:layout_marginRight="10dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombre3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etemail"
                        android:digits="áéíóúÁÉÍÓÚabcdefghijklmnñopqrstuvwxyz ABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
                        android:hint="@string/nombre_regsitro"
                        android:maxLines="1"
                      />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditNombre"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@color/transparent"


                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:iconGravity="textEnd"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"
                    />
            </LinearLayout>



                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="none"
                    android:textIsSelectable="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:startIconDrawable="@drawable/ic_baseline_person_24"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etApellido3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etNombre3"
                        android:digits="áéíóúÁÉÍÓÚabcdefghijklmnñopqrstuvwxyz ABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
                        android:hint="@string/apellido_registro"
                        android:maxLines="1"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditApellido"
                    android:layout_weight="1"
                    android:layout_width="0dp"

                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:iconGravity="textEnd"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"
                    />
            </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/etApellido3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEdad"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etApellido3"
                        android:hint="@string/edad_regsitro"
                        android:inputType="number"


                       />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_margin="15dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Cambiar contraseña" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"

                    android:layout_width="220dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:passwordToggleEnabled = "true"

                    app:startIconDrawable="@drawable/ic_baseline_vpn_key_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContraAntes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView5"

                        android:background="@color/white"
                        android:hint="Contraseña Actual"
                        android:inputType="textPassword"
                        android:maxLines="1"
                         />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerificarContrasenia"

                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    app:backgroundTint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:iconGravity="textEnd"
                    android:drawableLeft="@drawable/ic_baseline_verified_24"
                    android:textSize="10dp" />


            </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:enabled="true"
                    android:defaultFocusHighlightEnabled="true"
                    app:passwordToggleEnabled = "true"
                    android:layout_marginRight="10dp"

                    app:startIconDrawable="@drawable/ic_baseline_vpn_key_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNuevaContra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnVerificarContrasenia"
                        android:hint="Nueva contraseña"
                        android:inputType="textPassword"
                        android:textSize="15dp"

                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:passwordToggleEnabled = "true"
                    app:startIconDrawable="@drawable/ic_baseline_vpn_key_24">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirContra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etNuevaContra"
                        android:hint="@string/rec_confirme_la_contrasenia"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        android:textSize="15dp"
                        tools:ignore="TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGuardarCambiosUsu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Guardar"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:textSize="14dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Cancelar"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>


</RelativeLayout>