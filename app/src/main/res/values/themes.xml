<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Geolam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base</item>
        <item name="colorPrimaryVariant">#43FA4B</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/base</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/celesteb</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/base</item>
        <item name="colorControlHighlight">@color/celesteb</item>
        <item name="android:shadowRadius">5</item>

        <item name="android:angle">45</item>
        <item name="actionBarPopupTheme">@id/tvTituRefe</item>
        <item name="actionButtonStyle">@drawable/circular</item>
        <item name="android:radius">120dp</item>
        <item name="titleTextColor">@color/base</item>
        <item name="android:windowTitleBackgroundStyle">@color/naranja_fuerte</item>
        <item name="android:background">@color/transparent</item>
       <item name="android:backgroundTint">@null</item>
    </style>


    <style name="ToolbarTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/base</item>
        <item name="titleTextColor">@color/base</item>

        <item name="colorControlHighlight">@color/naranja</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowTitleBackgroundStyle">@color/white</item>
        <item name="android:backgroundTint">@null</item>

    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Geolam.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Geolam.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Geolam.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>